<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nisaabText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="Nisaab value"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />


    <TextView
        android:id="@+id/nisaabValue"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/nisaabText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nisaabText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/zakat_eligible_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="You are eligible for zakat?"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nisaabText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nisaabText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <TextView
        android:id="@+id/zakat_eligible"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/zakat_eligible_text"
        app:layout_constraintEnd_toEndOf="@+id/nisaabValue"
        app:layout_constraintStart_toStartOf="@+id/nisaabValue"
        app:layout_constraintTop_toTopOf="@+id/zakat_eligible_text" />

    <TextView
        android:id="@+id/net_worth_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="NetWorth"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/zakat_eligible_text"
        app:layout_constraintStart_toStartOf="@+id/zakat_eligible_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/net_worth"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/net_worth_text"
        app:layout_constraintEnd_toEndOf="@+id/zakat_eligible"
        app:layout_constraintStart_toStartOf="@+id/zakat_eligible"
        app:layout_constraintTop_toTopOf="@+id/net_worth_text" />

    <TextView
        android:id="@+id/amount_pay_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Amount you pay is"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/net_worth_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/net_worth_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

    <TextView
        android:id="@+id/amount_pay"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/amount_pay_text"
        app:layout_constraintEnd_toEndOf="@+id/net_worth"
        app:layout_constraintStart_toStartOf="@+id/net_worth"
        app:layout_constraintTop_toTopOf="@+id/amount_pay_text" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calculateOnClick"
        android:text="Calculate"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911" />


</androidx.constraintlayout.widget.ConstraintLayout>